{% extends "alap.jinja" %}

{% block head_elements %}
    {{ super() }}
    <link rel="stylesheet" href="{{ url_for('static', filename='styles/header.css') }}"/>
{% endblock head_elements %}


{% set nav_options = [
    ('Szabályok', 'szabalyok'),
    ('Meccsek', 'meccsek'),
    ('Állás', 'allas')
] -%}

{% set account_options = [
    ('Profil', 'profil')
] -%}


{% block body_content %}
	<header>
		<div class="menunyito">
			<a class="gomb">
				<h2>{{ current_user.name }}</h2>
			</a>
			<div id="user-menu">
				{% for caption, func in account_options %}
				<a  class="gomb" 
				href="{{url_for(func)}}">{{ caption }}</a>
				{% endfor %}
			</div>
		</div>

		<div class="menunyito">
			<a class="gomb" id="hamburger-ikon">
				menu
			</a>
			<div  id="nagymenu">				
			{% for caption, func in nav_options %}				
				<a  class="gomb" 
				href="{{url_for(func)}}">{{ caption }}</a>
			{% endfor %}
			</div>
		</div>
	</header>

	{% block main_content %}
        <main>
            <h1 id="udv-ujra">Jó újra itt látni {{ current_user.name -}} !</h1>
        </main>
	{% endblock main_content %}
{% endblock body_content %}